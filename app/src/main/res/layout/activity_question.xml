<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/question_background"
    tools:context=".ui.question.QuestionActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/prev_button_size"
        android:layout_height="@dimen/prev_button_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/button_arrow_black"/>

    <TextView
        android:id="@+id/question_description"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:lineSpacingMultiplier="1.1"
        android:fontFamily="@font/notosanskr_regular"
        android:textColor="@color/colorQuestionAfter"
        android:textSize="@dimen/size_question_description_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_question_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_description"
        app:layout_constraintBottom_toTopOf="@id/register_question_button"
        tools:listitem="@layout/item_question"/>

    <Button
        android:id="@+id/register_question_button"
        style="@style/ButtonStyle2"
        android:layout_marginStart="0dp"
        android:layout_marginVertical="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_start_button"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>