<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_quiz_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        android:fontFamily="@font/notosanskr_medium"
        android:textSize="@dimen/quiz_text_size"
        android:textColor="@android:color/black"
        tools:text=""/>

    <TextView
        android:id="@+id/id_quiz_question_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@id/id_quiz_number_text"
        app:layout_constraintTop_toBottomOf="@+id/id_quiz_number_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.03"
        android:fontFamily="@font/notosanskr_regular"
        android:textSize="@dimen/quiz_text_size"
        android:textColor="@android:color/black"
        android:lineSpacingMultiplier="1.3"
        tools:text="Quiz\nQuiz"/>

</android.support.constraint.ConstraintLayout>