<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button1_height</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorFont1</item>
        <item name="android:background">@drawable/button_big_2</item>
        <item name="android:fontFamily">@font/notosanskr_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button1_height</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_big</item>
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyle2">
        <item name="android:layout_width">@dimen/button2_width</item>
        <item name="android:layout_height">@dimen/button2_height</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/finish_purple_button</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorQuestionBefore</item>
        <item name="colorControlActivated">@color/colorQuestionAfter</item>
        <item name="android:textCursorDrawable">@color/colorQuestionAfter</item>
        <item name="android:textColor">@color/colorQuestionAfter</item>
        <item name="android:textColorHint">@color/colorQuestionBefore</item>
        <item name="android:textColorHighlight">@color/colorQuestionAfter</item>
    </style>

</resources>